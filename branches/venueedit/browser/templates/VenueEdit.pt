<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<div metal:fill-slot="main">

  <h1 tal:content="context/Title" class="documentFirstHeading summary">
      Title or id
  </h1>

  <form name="edit_form"
        method="post"
        enctype="multipart/form-data"
        class="enableUnloadProtection"
        action=""
        tal:condition="python:checkPermission('Change portal events', context)"
        tal:define="errors options/state/getErrors | python:{}"
        tal:attributes="action string:${context/absolute_url}/${view/__name__}">

    <input type="hidden" name="form.submitted" value="1"/>

    <table class="listing vertical">
      <tbody>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('description', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('country', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('region', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('subRegion', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('city', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('suburb', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('address', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('phone', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('latitude', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('longitude', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('postalAddress', mode='edit')" />
          </td>
        </tr>
        <tr>
          <td>
            <span metal:use-macro="python:context.widget('website', mode='edit')" />
          </td>
        </tr>

      </tbody>
    </table>

    <div class="mainContent">
        <input 
            class="inputbutton"
            type="submit"
            name="form.button.save_edit"
            value="Save"
            i18n:attributes="value label_save;"
            tal:attributes="tabindex tabindex/next;"/>

        <input 
            class="inputbutton"
            type="submit"
            name="form.button.cancel"
            value="Cancel"
            i18n:attributes="value label_cancel;"
            tal:attributes="tabindex tabindex/next"/>
    </div>

  </form>
</div>

</body>
</html>
